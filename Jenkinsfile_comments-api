pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /tmp/.m2:/tmp/.m2'
        }
    }
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build') {
            steps {
                dir("comments-api") {
                    sh "pwd"
                    sh 'mvn -B -DskipTests clean package'
                }
            }
        }
        stage('Test') {
            steps {
                dir("comments-api") {
                    sh 'mvn test'
                }
            }
            post {
                always {
                    dir("comments-api") {
                        junit 'target/surefire-reports/*.xml'
                     }
                }
            }
        }
    }
}